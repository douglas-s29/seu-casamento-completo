# Frontend Environment Variables
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Edge Functions Environment Variables
# These should be configured in Supabase Dashboard > Edge Functions > Secrets

# Payment Gateways
ASAAS_API_KEY=your_asaas_api_key
ABACATEPAY_API_KEY=your_abacatepay_api_key

# Security Configuration
ENVIRONMENT=development  # or "production"
SITE_URL=http://localhost:5173  # or your production URL

# Webhook Security
ABACATEPAY_WEBHOOK_SECRET=your_webhook_secret
ASAAS_WEBHOOK_TOKEN=your_webhook_token

# Optional: Rate Limiting (uses defaults if not set)
# RATE_LIMIT_MAX_REQUESTS=10
# RATE_LIMIT_WINDOW_MS=60000
